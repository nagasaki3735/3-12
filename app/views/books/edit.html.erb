<h1>Editing Book</h1>


<%= form_with model: @book, url: update_book_path(@book.id), method: :patch do |f| %>
<% if @book.errors.any? %>
<h1>error</h1>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <h2><li><%= message %></li></h2>
      <% end %>
    </ul>
<% end %>

  <h4>tiitle</h4>
  <%= f.text_field :title %>

  <h4>body</h4>
  <%= f.text_area :body %>

  <br><%= f.submit 'Update Book' %></br>


<% end %>


<%= link_to "show", "/books/#{@book.id}" %>
  |
<%= link_to "Back", "/books" %>
