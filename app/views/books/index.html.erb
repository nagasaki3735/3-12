<html lang="ja">
<meta charset="UTF-8" />
<h1>Books</h1>
<link rel="stylesheet" media="all" href="application.css">

<table>
	<thead>
		<tr>
			<th>title</th>
			<th>body</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		<% @books.each do |book| %>
		<tr>
			<td><%= book.title %></td>
			<td><%= book.body %></td>
			<td><%= link_to "show", book_path(book.id) %></td>
			<td><%= link_to "edit", edit_book_path(book) %> </td>
			<td><%= link_to "destroy", book, "data-confirm" => "Are you sure?" %></td>
		</tr>
		<% end %>
	</tbody>
</table>

<h2>New book</h2>

<%= form_for(@book) do |f| %>

	<h4>title</h4>
	<%= f.text_field :title %>

	<h4>body</h4>
	<%= f.text_area :body %>

	<br><%= f.submit 'Create Book' %></br>

<% end %>