<html lang="ja">
<meta charset="UTF-8" />
<%= flash[:notice] %>
<h1>Books</h1>


<table>
	<thead>
		<tr>
			<th>title</th>
			<th>body</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		<% @books.each do |book| %>
		<tr>
			<td><%= book.title %></td>
			<td><%= book.body %></td>
			<td><%= link_to "Show", book_path(book.id) %></td>
			<td><%= link_to "Edit", edit_book_path(book) %> </td>
			<td><%= link_to "Destroy",book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
		</tr>
		<% end %>
	</tbody>
</table>

<h2>New book</h2>


<%= form_for(@book) do |f| %>
<% if @book.errors.any? %>
<h1>error</h1>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <h2><li><%= message %></li></h2>
      <% end %>
    </ul>
<% end %>

	<h4>title</h4>
	<%= f.text_field :title %>

	<h4>body</h4>
	<%= f.text_area :body %>

	<br><%= f.submit 'Create Book' %></br>

<% end %>